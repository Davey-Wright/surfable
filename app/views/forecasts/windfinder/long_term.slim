ul
  - @forecast.days.each do |day|
    li
      h1= day.date
      ul
        - hour_value = 1
        - day.hours.each do |hour|
          li
            h2= hour_value
            p= hour.wave.direction_dir
            p= hour.wave.direction_deg
            p= hour.wave.height
            p= hour.wave.period
          - hour_value += 3
