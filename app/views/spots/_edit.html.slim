h2.major
  | update #{ @spot.name }s details

= simple_form_for(@spot, remote: true, html: { method: :put, class: 'check_label_form' }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name

    #spot_new_map.map
    = f.input :latitude
    = f.input :longitude

    = f.input :wave_break_type,
      as: :check_boxes,
      collection: Spot.wave_attribute_options[:break_type]

    = f.input :wave_direction,
      as: :check_boxes,
      collection: Spot.wave_attribute_options[:direction]

    = f.input :wave_length,
      as: :check_boxes,
      collection: Spot.wave_attribute_options[:length]

    = f.input :wave_shape,
      as: :check_boxes,
      collection: Spot.wave_attribute_options[:shape]

    = f.input :wave_speed,
      as: :check_boxes,
      collection: Spot.wave_attribute_options[:speed]

  .form-actions
    = f.button :submit, "Update Spot"
    = f.button :button, 'Reset', type: :reset
